
<%= form_for @dish do |f| %>


  <div class="box" >
    <div class="row">
      
      <div class="col-md-2"></div>
      <div class="col-md-8"></div>
      <div class="col-md-2"></div>
      
    </div>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8"></div>
      <div class="col-md-2"></div>
    </div>
    <div class="row">
      <div class="col-md-2"></div>

<!-- main ingredient question -->

      <div id="ingredient-question"> 
        <div class="col-md-8" >
          <h1 class="brand-title">Pair My Dish</h1>
          <p id="intro">
          We choose the perfect wine for your dish <br>using pairing techniques from top sommeliers.</p>

          <h2 class="home-title"> What are you cooking?</h2>

          <% Ingredient.all.each do |ingredient| %>
            <div class="radio-inline">
              <%= f.label :ingredient_id, value: ingredient.id, class: "radio-style" do %>
                <%= f.radio_button :ingredient_id, ingredient.id, data: { ingredient: ingredient.name }, class: "ingredient-question-button" %>
                <%= (ingredient.name).titleize %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>


<!-- cooking method question -->
    
      <div class="hidden" id="cooking-method-question"> 
        <div class="col-md-8">
          <h2 class="home-title"> How are you cooking it?</h2>
          <% CookingMethod.all.each do |cooking_method| %>
            <div class="radio-inline">
              <%= f.label :cooking_method_id, value: cooking_method.id, class: "radio-style" do %>
                <%= f.radio_button :cooking_method_id, cooking_method.id, data: { cooking_method: cooking_method.name }, class: "cooking-method-question-button" %>
                <%= (cooking_method.name).titleize %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

<!-- sauce method question -->

      <div class="hidden" id="sauce-question"> 
        <div class="col-md-8">
          <h2 class="home-title"> What kind of sauce are you adding?</h2> 
          <% Sauce.all.each do |sauce| %>
            <div class="radio-inline">
              <%= f.label :sauce_id, value: sauce.id, class: "radio-style sauce-style" do %>
                <%= f.radio_button :sauce_id, sauce.id, data: { sauce: sauce.name }, class: "sauce-question-button" %>
                <%= (sauce.name).titleize %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>



<!-- side question -->


    <div class="hidden" id="side-question"> 
      <div class="col-md-8">

        <h2 class="home-title">Does your dish have any of these flavors?</h2>
        <%= f.collection_check_boxes(:side_ids, Side.all.order('name ASC'), :id, :name) do |side| %>
          <%= side.label(class: "radio-style checkbox-style") { side.check_box(data: { side: side.text }) + (side.text).titleize  } %>
        <% end %>
        <br>
        <a href="#" class="btn btn-default btn-lg" id="side-question-button">Pair my dish</a>

      </div>

    </div>


<!-- submit-dish  -->   

      <div class="hidden" id="submit-dish">
        <div class="col-md-8">
          <!-- <h3 class="home-title">Your dish is </h3> -->
          <h2 id="show-dish-name"></h2>
          <h4 class="home-title" id="number-of-wines">...pairs well with </h4> 
          
          <ul id="show-wine-name">
          </ul>
          
          <button class="btn btn-default btn-lg" id="save-dish">Save my dish</button>
        </div>
      </div>

      <div class="col-md-2"></div>
      </div>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8"></div>
      <div class="col-md-2"></div>
    </div>
  </div>

<% end %>


<!-- sign-up-modal -->

<div class="modal fade" id="sign-up-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Sign up to save your dish</h4>
      </div>
      <div class="modal-body">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->










