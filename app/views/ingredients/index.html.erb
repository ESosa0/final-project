<div class="box">

  <h1>Ingredient List</h1>

  <table class="table table-striped">
    <tr> 
      <th> Name </th>
      <th> Id </th>
    </tr> 
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.id %></td>
      </tr>
    <% end %>
  </table>
</div>

